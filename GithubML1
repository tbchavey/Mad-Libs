# My Mad Lib Generator by Teresa Bush-Chavey

def madlib ():
    print "Fun With Mad Libs"
    
    relative = raw_input("Enter a type of relative")
    name = raw_input("Enter a name")
    verb = raw_input("Enter an 'ing' verb")
    adjective = raw_input("Enter an adjective")
    noun = raw_input("Enter a noun")
    
    print "My dear", relative, name, "was", verb, "along the road when he/she was attacked by a", adjective, noun
